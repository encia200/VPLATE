<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vplate.activity.CompleteVideoInfoActivity">
    
    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="42.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.2sp"
            android:textColor="#1d1d1d"
            android:gravity="center_horizontal"
            android:text="상세페이지"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <VideoView
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:id="@+id/complete_video_play"
        />

    <RelativeLayout
        android:id="@+id/data"
        android:layout_below="@id/complete_video_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/complete_cateImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cate_icon_2"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12.5dp"/>

        <TextView
            android:layout_below="@+id/complete_cateImg"
            android:id="@+id/complete_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19.3sp"
            android:textColor="#1d1d1d"
            android:text="영상제목입력하세요"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10.5dp"
            />

        <TextView
            android:layout_below="@+id/complete_video_name"
            android:id="@+id/complete_video_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.5dp"
            android:layout_marginLeft="16dp"
            android:text="it's story"
            android:textSize="11.5sp"
            android:textColor="#686868"/>

        <RelativeLayout
            android:id="@+id/pick_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_video_story">

            <ImageView
                android:id="@+id/pick_timeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_query_builder_white_36_px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14.5dp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/complete_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="#8c8c8c"
                android:text="0:30"
                android:layout_toRightOf="@id/pick_timeImg"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/complete_postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/1/5/ 03:20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lineOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@id/data">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ratioAndMediaType"
        android:layout_below="@id/lineOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ratio"
            android:layout_width="match_parent"
            android:layout_height="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#989898"
                android:text="영상 비율"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#989898"
                android:text="16 : 9"
                android:layout_marginLeft="78.5dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/ratio"
            android:layout_width="match_parent"
            android:layout_height="26dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#989898"
                android:text="미디어 종류"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/templatecomplete_mediaType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.5sp"
                android:textColor="#989898"
                android:text="사진6개 / 비디오4개"
                android:layout_marginLeft="78.5dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lineTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_below="@id/ratioAndMediaType">
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/lineTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/complete_content"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="43dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영상내용 어쩌구 저쩌구 릴리리맘보를 룰루랄라 효진이는 샌드위치 선민이는 젤리먹고 마가렛트 먹기"
            android:textSize="11.5sp"
            android:textColor="#1d1d1d"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/complete_album_downBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_download_album"
            android:background="#00ff0000"
            android:layout_marginLeft="16.5dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/complete_uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:src="@drawable/icon_community_uproad"
            android:layout_marginRight="16.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>
