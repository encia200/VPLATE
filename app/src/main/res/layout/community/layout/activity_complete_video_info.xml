<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vplate.activity.CompleteVideoInfoActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17.2sp"
            android:textColor="#1d1d1d"
            android:gravity="center_horizontal"
            android:text="상세페이지"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complete_video_play"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:id="@+id/complete_btn_username"
            android:background="#00ff0000"
            android:gravity="center"
            android:text="user_name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/complete_btn_username"
            android:id="@+id/complete_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it's title"
            />
        <TextView
            android:layout_below="@+id/complete_video_name"
            android:id="@+id/complete_video_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it's story"/>
        <TextView
            android:layout_below="@+id/complete_video_story"
            android:id="@+id/complete_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="it's time"/>



        <ImageButton
            android:layout_marginTop="10dp"
            android:id="@+id/complete_btn_jjeam"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/jjang1"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="0dp">

        <ImageButton
            android:id="@+id/complete_album_downBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_download_album"
            android:background="#00ff0000"
            android:layout_marginLeft="16.5dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/complete_uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:src="@drawable/icon_community_uproad"
            android:layout_marginRight="16.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>
