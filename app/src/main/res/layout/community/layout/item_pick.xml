<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pick_image"
        android:layout_width="match_parent"
        android:layout_height="202.5dp"
        android:src="@drawable/img_ex_1"/>

    <Button
        android:layout_width="15.5dp"
        android:layout_height="14.5dp"
        android:background="@drawable/ic_favorite_white_36_px"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        />

    <RelativeLayout
        android:id="@+id/pick_titleNtime"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_below="@id/pick_image">

        <ImageView
            android:id="@+id/pick_categoryIcon"
            android:layout_width="57.5dp"
            android:layout_height="16.5dp"
            android:src="@drawable/cate_icon_2"
            android:layout_marginTop="8.5dp"
            android:layout_marginLeft="14.5dp"
            />

        <TextView
            android:id="@+id/pick_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.4sp"
            android:textColor="#1d1d1d"
            android:text="본문 내용 어쩌고 저쩌고 어쩌고 저쩌고 어쩌고"
            android:layout_marginLeft="14.5dp"
            android:layout_below="@id/pick_categoryIcon"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/pick_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9.5dp"
            android:text="#hashtag #hashtag #hashtag"
            android:textSize="11.5sp"
            android:textColor="#686868"
            android:layout_below="@id/pick_title"
            android:lineSpacingExtra="5.8sp"/>

        <RelativeLayout
            android:id="@+id/pick_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pick_story"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/pick_timeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_query_builder_white_36_px" />

            <TextView
                android:id="@+id/pick_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="#8c8c8c"
                android:text="0:30"
                android:layout_toRightOf="@id/pick_timeImg"
                android:layout_marginLeft="4dp"
                android:gravity="center_horizontal"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/pick_postTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/1/5/ 03:20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="11dp"/>

    </RelativeLayout>



</RelativeLayout>