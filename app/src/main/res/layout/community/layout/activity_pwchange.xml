<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#1d1d1d"
        android:text="비밀번호 재설정"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="56dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#4c4d4e"
        android:text="비밀번호 입력"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="92.5dp"/>

            <EditText
                android:id="@+id/pw_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:hint="영문 숫자 ~~~"
                android:textSize="11dp"
                android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:textColor="#4c4d4e"
            android:gravity="center_horizontal"
            android:text="비밀번호 입력 확인"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="23.5dp"
            android:id="@+id/changing_pw"

            android:layout_below="@+id/change_pw_edit"/>


            <EditText
                android:id="@+id/changed_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:hint="영문 숫자 ~~~"
                android:textSize="11dp"
                android:layout_marginTop="5dp"/>

    <RelativeLayout
        android:id="@+id/mypage_pwDifferentAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="33dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 일치하지 않습니다."
            android:textSize="11sp"
            android:textColor="#ff0000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tri"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

        <ImageButton
            android:id="@+id/checking_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/inputcomple"
            />






</LinearLayout>