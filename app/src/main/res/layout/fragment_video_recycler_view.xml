<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/community_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        app:fabSize="normal"
        app:layout_behavior="com.codepath.floatingactionbuttontest.ScrollAwareFABBehavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/community_myvideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/community_ranking"
        android:layout_margin="8dp"
        android:clickable="true"
        android:src="@android:drawable/ic_dialog_email"
        app:fabSize="normal"
        app:layout_behavior="com.codepath.floatingactionbuttontest.ScrollAwareFABBehavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/community_backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
        app:backgroundTint="#00ffffff"
        app:fabSize="normal"
        app:layout_behavior="com.codepath.floatingactionbuttontest.ScrollAwareFABBehavior" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>