<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마이페이지"
        android:textSize="17.2sp"
        android:textColor="#1d1d1d"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jungwoo"
            android:id="@+id/mypage_profile"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/mypage_nameTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mypage_profile"
            android:text="조수민"
            android:textSize="11dp"
            android:id="@+id/mypage_nameTxt"
            android:includeFontPadding="false"
            android:textColor="#323232"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mypage_nameTxt"
            android:textSize="10dp"
            android:includeFontPadding="false"
            android:id="@+id/mypage_email"
            android:text="vplate@vplate.com"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

    <!-- 리스트뷰 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계정"
        android:background="#eeee"
        />

    <ListView
        android:id="@+id/mypage_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#f000"
        android:dividerHeight="1dip"></ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="설정"
        android:background="#eeee"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/push_button_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="푸시 알람"
            android:id="@+id/push_text"
            />
    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_button"
        android:thumb="@drawable/circle"
        app:track="@drawable/switch_track_selector"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="지원"
        android:background="#eeee"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/support_list"
        android:divider="#f000"
        android:dividerHeight="1dip"
        >
    </ListView>

</LinearLayout>