<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/home_tabBar"
        android:layout_width="match_parent"
        android:layout_height="42.5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="카테고리"
            android:textColor="#662382"
            android:textSize="13.4sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_tabBar">

        <ImageView
            android:id="@+id/home_cate_img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cate_img_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/home_cate_img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_cate_img_1"
            android:src="@drawable/cate_img_2" />

        <ImageView
            android:id="@+id/home_cate_img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_cate_img_2"
            android:src="@drawable/cate_img_3" />

        <ImageView
            android:id="@+id/home_cate_img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_cate_img_3"
            android:src="@drawable/cate_img_4" />

        <ImageView
            android:id="@+id/home_cate_img_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_cate_img_4"
            android:src="@drawable/cate_img_5" />

        <ImageView
            android:id="@+id/home_cate_img_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/home_cate_img_5"
            android:src="@drawable/cate_img_6" />
        <ImageView
            android:id="@+id/home_triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/triangle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_btnBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_category">

        <TextView
            android:id="@+id/home_hotBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal"
            android:text="인기순"
            android:textColor="#686868"
            android:textSize="11.5sp" />

        <TextView
            android:id="@+id/home_latestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/home_hotBtn"
            android:gravity="center_horizontal"
            android:text="최신순"
            android:textColor="#1d1d1d"
            android:textSize="11.5sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_btnBar"
        android:padding="10dp">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>