<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/template_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/video_sample_1_pic" />

    <RelativeLayout
        android:id="@+id/template_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/template_image">

        <ImageView
            android:id="@+id/template_cate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/cate_icon_2" />

        <TextView
            android:id="@+id/template_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/template_cate_icon"
            android:layout_marginLeft="16dp"
            android:text="Twinkle Twinkle Neon"
            android:textColor="#1d1d1d"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/template_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/template_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="5.8sp"
            android:text="#해시태그1 #해시태그2 #해시태그3"
            android:textColor="#686868"
            android:textSize="11.5sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/template_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/template_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_query_builder_white_36_px" />

            <TextView
                android:id="@+id/template_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="0:30"
                android:textColor="#8c8c8c"
                android:textSize="11.5sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>