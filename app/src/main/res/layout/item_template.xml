<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/template_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/video_sample_1_pic" />

    <ImageView
        android:id="@+id/template_incompleteIng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ing"
        android:adjustViewBounds="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/template_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/template_image">

        <ImageView
            android:id="@+id/template_cate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/cate_icon_2" />

        <RelativeLayout
            android:id="@+id/template_incompleteTxt"
            android:layout_width="57.5dp"
            android:layout_height="16.5dp"
            android:layout_toEndOf="@id/template_cate_icon"
            android:background="#000000"
            android:layout_marginTop="8.5dp"
            android:visibility="gone">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="미완성"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/template_uploadTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="upload time"
            android:layout_marginRight="15dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/template_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/template_cate_icon"
            android:layout_marginLeft="14.5dp"
            android:text="Twinkle Twinkle Neon"
            android:textColor="#1d1d1d"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/template_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/template_title"
            android:layout_marginLeft="14.5dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="5.8sp"
            android:text="#해시태그1 #해시태그2 #해시태그3"
            android:textColor="#686868"
            android:textSize="11.5sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/template_content">

            <ImageView
                android:id="@+id/template_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_query_builder_white_36_px"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/template_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="0:30"
                android:textColor="#8c8c8c"
                android:textSize="11.5sp"
                android:layout_toRightOf="@id/template_time_icon"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>