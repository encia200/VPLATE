<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vplate.activity.PwFindActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#1d1d1d"
        android:text="비밀번호 찾기"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="56dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#8c8c8c"
        android:gravity="center_horizontal"
        android:text="비밀번호를 찾기 위해 입력해주세요."
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#4c4d4e"
        android:gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="71dp"
        android:text="이름 입력"/>

    <EditText
        android:id="@+id/find_nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="영문 숫자 ~~~"
        android:textSize="11dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메일 입력"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="23.5dp"/>

    <EditText
        android:id="@+id/find_emailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="영문 숫자 ~~~"
        android:textSize="11dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="질문1_다시 태어난다면 되고 싶은 것은?"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="23dp"/>

    <EditText
        android:id="@+id/find_q1Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="11dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="질문2_광어, 연어, 도미, 오징어, 우럭, 참치 중에서 고른다면?"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/find_q2Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="11dp"/>

    <ImageButton
        android:id="@+id/find_completeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/inputcomple"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20.5dp"/>


</LinearLayout>
