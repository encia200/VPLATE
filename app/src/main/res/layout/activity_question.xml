<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="59dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#8c8c8c"
        android:gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:text="이메일/비밀번호 분실시를 위해 입력해주세요." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#4c4d4e"
        android:gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="60dp"
        android:text="질문1_다시 태어난다면 되고 싶은 것은?" />

    <EditText
        android:id="@+id/question_q1Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#4c4d4e"
        android:gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="23.5dp"
        android:text="질문2_광어, 연어, 도미, 오징어, 우럭, 참치 중에서 고른다면?" />

    <EditText
        android:id="@+id/question_q2Edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="11dp" />

    <ImageButton
        android:id="@+id/question_startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/inputcomple"/>

</LinearLayout>
