<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vplate.activity.LoginActivity">

    <Button
        android:id="@+id/login_findPwBtn"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:textSize="14sp"
        android:textColor="#686868"
        android:background="#00ff0000"
        android:gravity="center_horizontal"
        android:text="비밀번호 찾기"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hello"
        android:layout_marginTop="98.5dp"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#8c8c8c"
        android:gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="13dp"
        android:text="로그인을 위해 입력해주세요."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#4c4d4e"
        android:gravity="center_horizontal"
        android:layout_marginTop="59.5dp"
        android:layout_marginLeft="32dp"
        android:text="이메일"
        />

    <EditText
        android:id="@+id/login_emailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11.5sp"
        android:textColor="#4c4d4e"
        android:gravity="center_horizontal"
        android:text="비밀번호"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="23.5dp"/>

    <EditText
        android:id="@+id/login_pwEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>

    <ImageButton
        android:id="@+id/login_loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.5dp"
        android:layout_marginLeft="32dp"
        android:background="@drawable/login"/>

</LinearLayout>
